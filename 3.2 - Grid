// Random central square with a size that is a multiple of 50. 10x10 grid that occupies the entire square, even if random. Paint the square of the grid that the mouse is over.

 int tamanho; 
  int x = 0;
  int y = 0;

​

void setup()
{
  size(600,600);
 
  tamanho = 400+50* (int) random (5);
 
  print(tamanho);
  

}

​

void draw()
{
  background(0);
  
  fill(255);
    rect(x,y,tamanho,tamanho);
    
  for(int i = 0; i < tamanho; i += (tamanho/10))
  {
    
    for(int j = 0; j < tamanho; j += (tamanho/10))
    {
      if((mouseX > i && mouseX < i + tamanho/10) &&
        (mouseY > j && mouseY < j + tamanho/10))
        
        fill(255,0,0);
      else
        fill(255);
      
      rect(i,j,tamanho/10, tamanho/10);
    }
  }
  


}
